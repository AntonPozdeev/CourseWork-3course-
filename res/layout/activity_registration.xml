<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.90" >

        <TextView
            android:id="@+id/fullNametextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:text="Full Name" />

        <EditText
            android:id="@+id/fullNameEdit"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email**" 
            android:textColor= "#FF0000"/>

        <EditText
            android:id="@+id/emailEdit"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/loginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.90"
            android:text="Login**" 
            android:textColor= "#FF0000"/>

        <EditText
            android:id="@+id/loginEdit"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/passwordtextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.90"
            android:text="Password**"
            android:textColor= "#FF0000" 
            />

        <EditText
            android:id="@+id/passwordEdit"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:capitalize="none"
        	android:password="true"
        	android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.90" >

        <TextView
            android:id="@+id/confirmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.90"
            android:text="Confirm**"
            android:textColor= "#FF0000"
             />

        <EditText
            android:id="@+id/confirmEdit"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:capitalize="none"
        	android:password="true"
        	android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.72"
            android:text="Phone" />

        <EditText
            android:id="@+id/phoneEdit"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone" />

    </LinearLayout>

    <Button
        android:id="@+id/RegistrationButton"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:text="SIGN UP" />

    <TextView
        android:id="@+id/EmailViewError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF0000"
        android:text="You must write EMAIL"
        android:textColor="#000000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/LoginViewError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:text="You must write LOGIN"
        android:textColor="#000000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/PswdCnfrViewError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.50"
        android:background="#FF0000"
        android:focusable="false"
        android:text="Password not equals Confirm"
        android:textColor="#000000"
        android:visibility="invisible" />

</LinearLayout>